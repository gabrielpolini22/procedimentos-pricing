<script>
// PARTICLES
const canvas=document.getElementById('bg'),ctx=canvas.getContext('2d');
canvas.width=innerWidth;canvas.height=innerHeight;

const p=[];
for(let i=0;i<120;i++){
  p.push({x:Math.random()*canvas.width,y:Math.random()*canvas.height,r:Math.random()*2+1,vx:(Math.random()-.5)*.6,vy:(Math.random()-.5)*.6});
}
function anim(){
  ctx.clearRect(0,0,canvas.width,canvas.height);
  ctx.fillStyle='#00ffee';
  p.forEach(a=>{
    a.x+=a.vx;a.y+=a.vy;
    if(a.x<0||a.x>canvas.width)a.vx*=-1;
    if(a.y<0||a.y>canvas.height)a.vy*=-1;
    ctx.beginPath();ctx.arc(a.x,a.y,a.r,0,Math.PI*2);ctx.fill();
  });
  requestAnimationFrame(anim);
}
anim();
onresize=()=>{canvas.width=innerWidth;canvas.height=innerHeight}

// CHECKLIST STORAGE
const checks=document.querySelectorAll('.checklist input');
checks.forEach((c,i)=>{
  c.checked = localStorage.getItem('relatorio_ache_check_'+i)==='true';
  c.addEventListener('change',()=>localStorage.setItem('relatorio_ache_check_'+i,c.checked));
});
function resetChecklist(){
  checks.forEach((c,i)=>{
    c.checked=false;
    localStorage.removeItem('relatorio_ache_check_'+i);
  });
}
</script>

